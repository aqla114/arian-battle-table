.modal-wrapper
    z-index: 999;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 60px 10px;
    text-align: center
    background-color: rgba(255, 255, 255, 0.5);
    visibility: visible;

    .dialog-window
        box-sizing: border-box;
        display: inline-block
        z-index: 20;
        background-color: white;
        padding: 30px 30px;
        border-radius: 4px;
        width: 360px
        height: 240px;
        box-shadow: 0 0 10px rgba(0, 0, 0, .6);
        vertical-align: middle
        &__description
            margin-top: 20px;
            margin-bottom: 80px;
        &__enter-button
            display: inline;
        &__cancel-button
            margin-left: 20px;
            display: inline;