{
    "compilerOptions": {
      "lib": [
        "DOM",
        "es2017",
        "ESNext"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "inlineSourceMap": true,
      "jsx": "react-jsx",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "pretty": true,
      "noEmitOnError": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "typeRoots": [
        "./node_modules/@types"
      ],
    }
}